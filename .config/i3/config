# Shutdown menu
#
set $shutdown_menu System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$shutdown_menu" {
    bindsym l exec $HOME/.config/i3/scripts/i3exit lock, mode "default"
    bindsym e exec $HOME/.config/i3/scripts/i3exit logout, mode "default"
    bindsym s exec $HOME/.config/i3/scripts/i3exit suspend, mode "default"
    bindsym h exec $HOME/.config/i3/scripts/i3exit hibernate, mode "default"
    bindsym r exec $HOME/.config/i3/scripts/i3exit reboot, mode "default"
    bindsym Shift+s exec $HOME/.config/i3/scripts/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Ctrl+F1 mode "$shutdown_menu"

